<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/setting_bg">
    
    <ScrollView 
	     android:id="@+id/sv_huodong"
	     android:layout_width="fill_parent"		
	     android:layout_height="0dp"
	     android:layout_weight="1"
	     >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
	<RelativeLayout 
	    android:id="@+id/rl_bgdetail_head"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:layout_marginRight="15dp"
	    >
	     <ImageView 
		    android:id="@+id/iv_bgdetail_headimg"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="30dp"
		    />
	     <ImageView 
		    android:id="@+id/iv_bgdetail_dj"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
			android:layout_marginLeft="90dp"
			android:layout_marginTop="75dp"
		    />
	     <TextView 
	         android:id="@+id/tv_bgdetail_nickname"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textColor="@color/orange_bg"
	         android:textSize="18sp"
	         android:singleLine="true"
	         android:ellipsize="end"
	         android:layout_toRightOf="@id/iv_bgdetail_headimg"
	         android:layout_marginLeft="30dp"
	         android:layout_marginTop="15dp"
	         android:textIsSelectable="true"
	         />
	     <TextView 
	         android:id="@+id/tv_bgdetail_introduce"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textColor="@color/gray_light"
	         android:textSize="13sp"
	         android:maxLines="2"
	         android:ellipsize="end"
	         android:layout_toRightOf="@id/iv_bgdetail_headimg"
	         android:layout_below="@id/tv_bgdetail_nickname"
	         android:layout_marginLeft="30dp"
	         android:layout_marginTop="15dp"
	         />
	</RelativeLayout>
	<TextView 
	    android:id="@+id/tv_div1"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/rl_bgdetail_head"
	    android:layout_height="0.3dp"
	    android:background="@color/list_view_divider"
	    />
	<RelativeLayout 
	    android:id="@+id/rl_bgdetail_content"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/tv_div1"
	    android:padding="10dp"
	    >
	    <TextView 
	        android:id="@+id/tv_bgdetail_content"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/name_text"
	        android:paddingTop="3dp"
	        android:layout_marginBottom="10dp"
	        android:textSize="16sp"
	        android:lineSpacingExtra="1dp"
	        android:typeface="serif"
	        android:autoLink="all"
	        android:textIsSelectable="true"
	        />
	    <cn.fszt.trafficapp.widget.MyGridView2
		    android:id="@+id/gridview"
		    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_bgdetail_content"
            android:layout_margin="8dp"
            android:scrollbars="none"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:numColumns="3"/>
	    <TextView 
	        android:id="@+id/tv_bgdetail_createtime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:textSize="12sp"
	        android:textColor="#a5a5a5"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/gridview"
	        />
	    <TextView 
	        android:id="@+id/tv_bgdetail_reply"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="车友回复："
	        android:textSize="14sp"
	        android:textColor="@color/titlebar"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/tv_bgdetail_createtime"
	        />
	    <TextView 
	        android:id="@+id/tv_bgdetail_replynum"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/titlebar"
	        android:layout_toRightOf="@id/tv_bgdetail_reply"
	        android:layout_below="@id/tv_bgdetail_createtime"
	        />

	    <ProgressBar
	        android:id="@+id/pb_bgdetail"
	        style="?android:attr/progressBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@id/tv_bgdetail_replynum" />

	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:gravity="center_vertical"
	        android:layout_marginRight="5dp"
	        >
	     <ImageView
	         android:id="@+id/iv_bg_good" 
	         android:layout_width="24dp"
	         android:layout_height="24dp"
	         android:background="@drawable/btn_bgdetail_good"
	         />
  	     
  	     <TextView 
	         android:id="@+id/tv_bg_good"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="3dp"
	         android:textSize="16sp"
	         android:textColor="@color/gray_light"
	         />
	    </LinearLayout>
	    
	</RelativeLayout>
	<TextView 
	    android:id="@+id/tv_div2"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/rl_bgdetail_content"
	    android:layout_height="0.3dp"
	    android:background="@color/gray_light"
	    />
	
	<cn.fszt.trafficapp.widget.MyListview
        android:id="@+id/pdv_bgdetail"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/tv_div2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
	</RelativeLayout>
	
	</ScrollView>
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/list_view_divider"
	    />
	<RelativeLayout 
	    android:id="@+id/rl_send"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    >
	    <ImageView 
	        android:id="@+id/iv_bgdetail_expression"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="8dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/expression"
	        />
	    <Button 
	        android:id="@+id/btn_bgdetail_send"
	        android:layout_width="50dp"
	        android:layout_height="40dp"
	        android:text="发送"
	        android:background="@android:color/transparent"
	        android:textColor="@color/name_text"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        />
	    <EditText 
	        android:id="@+id/et_bgdetail"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_bgdetail_expression"
	        android:layout_toLeftOf="@id/btn_bgdetail_send"
	        android:layout_marginLeft="5dp"
	        android:inputType="text"
	        android:textColor="@color/name_text"
	        android:textCursorDrawable="@color/name_text"
	        android:maxLines="3"
	        />
	</RelativeLayout>
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/list_view_divider"
	    />
	<LinearLayout 
        android:id="@+id/ll_expression"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/chat_ll_expression_height"
	    android:orientation="vertical"
	    android:visibility="gone"
	    android:background="@color/setting_bg">
	    <android.support.v4.view.ViewPager 
		    android:id="@+id/vp_id"
		    android:layout_width="wrap_content"
	        android:layout_height="@dimen/chat_vp_id_height"
	        android:layout_marginTop="@dimen/chat_vp_marginTop"/>
	    <LinearLayout android:id="@+id/ll_vp_selected_index"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:gravity="center"
	        android:orientation="horizontal">
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
