<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_bg" >
    

<RelativeLayout 
	    android:id="@+id/rl_con_login"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:gravity="center_vertical"
	    android:layout_marginTop="20dp"
	    android:background="@color/white"
        >
		<ImageView 
		    android:id="@+id/iv_con_user"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:background="@drawable/lo_user"
		    />
		<EditText
		    android:id="@+id/et_con_user" 
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:layout_toRightOf="@id/iv_con_user"
		    android:textSize="16sp"
		    android:textColor="#727272"
		    android:background="@color/white"
			android:singleLine="true"
		    />
	</RelativeLayout>
	
<RelativeLayout 
	    android:id="@+id/rl_con_pwd"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        android:background="@drawable/preference_last_item"
        android:visibility="gone">
    <ImageView 
		    android:id="@+id/iv_con_pwd"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="20dp"
		    android:layout_marginLeft="8dp"
		    android:layout_marginRight="15dp"
		    android:background="@drawable/lo_pwd"
		    />
	<EditText
	    android:id="@+id/et_con_pwd"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    android:layout_toRightOf="@id/iv_con_pwd"
		android:textSize="16sp"		
		android:textColor="#727272" 
		android:hint="6-12位密码"
		android:background="@color/white"
		android:inputType="textPassword"
		android:singleLine="true"/>     
	</RelativeLayout>

<ImageView 
    android:id="@+id/btn_con_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/btn_req_submit"
    android:layout_gravity="right"
    android:layout_marginRight="10dp"
    />

</LinearLayout>
