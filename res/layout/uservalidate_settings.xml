<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/setting_bg"
        android:orientation="vertical" >
        
 
		<ScrollView 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		
    		 >
        	<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical" >
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:layout_marginTop="16dp"
            			android:clickable="false"
            			android:background="@drawable/bg_listview_menu" >
						<TextView
            			    android:id="@+id/tv_user_mobile"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="10dp" 
        					android:layout_marginRight="15dp"
        					android:text="手机"
        					android:textSize="15sp"		
							android:textColor="#727272" />  
							
						<ImageView 
      				        android:id="@+id/btn_user_mobile"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:layout_marginRight="15dp"
      				        android:background="@drawable/btn_user_con"
      				        />
						<ImageView 
      				        android:id="@+id/btn_user_mobile_val"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:layout_marginRight="10dp"
      				        android:background="@drawable/btn_user_val"
      				        android:visibility="gone"
      				        />
						<EditText 
						    android:id="@+id/et_user_mobile"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:layout_toRightOf="@id/tv_user_mobile"
						    android:layout_toLeftOf="@id/btn_user_mobile"
						    android:textSize="15sp"
						    android:textColor="#727272"
						    android:enabled="false"
						    android:gravity="right"
						    android:layout_marginRight="10dp"
						    android:layout_centerVertical="true"
						    android:background="#ffffff"
						    android:singleLine="true"
						    />    
										
      				</RelativeLayout>
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="false"
            			android:background="@drawable/preference_last_item" 
            			android:visibility="gone">
            			<TextView
            			    android:id="@+id/tv_user_email"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="10dp" 
        					android:layout_marginRight="10dp"
        					android:text="邮箱"
        					android:textSize="15sp"		
							android:textColor="#727272" /> 
							
            			<ImageView 
      				        android:id="@+id/btn_user_email"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:background="@drawable/btn_user_con"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:layout_marginRight="10dp"
      				        />
            			
            			<ImageView 
      				        android:id="@+id/btn_user_email_val"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:layout_marginRight="10dp"
      				        android:background="@drawable/btn_user_val"
      				        android:visibility="gone"
      				        />
						<EditText 
						    android:id="@+id/et_user_email"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:layout_toRightOf="@id/tv_user_email"
						    android:layout_toLeftOf="@id/btn_user_email"
						    android:textSize="15sp"
						    android:textColor="#727272"
						    android:enabled="false"
						    android:gravity="right"
						    android:layout_marginRight="10dp"
						    android:layout_centerVertical="true"
						    android:background="#ffffff"
						    android:singleLine="true"
						    />     
						    					
      				</RelativeLayout>

      				<!--   ********************************************************************   -->
        	
        	</LinearLayout>
    </ScrollView>
</LinearLayout>
