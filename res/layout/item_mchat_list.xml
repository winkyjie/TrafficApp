<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_listview_text"
    >
    
 <LinearLayout 
     android:id="@+id/ll_mchat"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_alignParentRight="true"
     android:layout_marginLeft="6dp"
	 android:layout_marginRight="8dp"
     >
 <ImageView 
    android:id="@+id/iv_mchat"
    android:layout_width="45dp"
    android:layout_height="45dp"
	android:layout_marginTop="8dp"
	android:layout_marginBottom="1dp"
    android:scaleType="fitXY"
    />
 <TextView 
     android:id="@+id/tv_mchat_del"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="5dp"
     android:text="@string/delete"
     android:textSize="13sp"
     android:layout_gravity="center_horizontal"
     android:clickable="true"
     android:textColor="#a5a5a5"
     />
 </LinearLayout>
 
 <RelativeLayout 
     android:id="@+id/rl_mchat"
     android:layout_toLeftOf="@id/ll_mchat"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
	 android:layout_marginLeft="4dp"
	 android:clickable="true"
     >
 
 <LinearLayout 
     android:id="@+id/ll_mchat_nickname"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="4dp"
     android:layout_marginBottom="3dp"
     android:orientation="horizontal"
     android:gravity="center_vertical"
     >
 
 <ImageView 
     android:id="@+id/iv_mchat_laba"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:clickable="true"
     android:layout_marginRight="7dp"
     android:background="@drawable/re_laba"
     android:visibility="gone"/>
  <TextView 
    android:id="@+id/tv_mchat_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp" 
    android:textColor="#e75735"/>
 </LinearLayout>
 <TextView 
    android:id="@+id/tv_mchat_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll_mchat_nickname"
    android:layout_marginRight="1dp"
    android:layout_alignParentRight="true"
    android:paddingTop="3dp"
    android:layout_marginBottom="5dp"
    android:textSize="15sp"
    android:lineSpacingExtra="1dp"
    android:textColor="@color/name_text"
    android:typeface="serif"
    />
 <ImageView 
     android:id="@+id/iv_mchat_img1"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mchat_content"
	 android:scaleType="centerCrop"
	 android:background="@drawable/default_image"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mchat_img2"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mchat_content"
     android:layout_toRightOf="@id/iv_mchat_img1"
	 android:scaleType="centerCrop"
	 android:background="@drawable/default_image"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mchat_img3"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mchat_content"
     android:layout_toRightOf="@id/iv_mchat_img2"
	 android:scaleType="centerCrop"
	 android:background="@drawable/default_image"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mchat_img4"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mchat_content"
     android:layout_toRightOf="@id/iv_mchat_img3"
	 android:scaleType="centerCrop"
	 android:background="@drawable/default_image"
	 android:visibility="gone"
     />
<RelativeLayout 
     android:id="@+id/rl_mchat_createtime"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/iv_mchat_img1"
     android:layout_marginTop="10dp"
     >
	   <TextView 
	    android:id="@+id/tv_mchat_createtime"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="4dp"
	    android:layout_alignParentLeft="true"
	    android:textSize="12sp"
	    android:textColor="#a5a5a5"
	    />
  	<LinearLayout 
  	    android:id="@+id/ll_bg_inpinglun"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:gravity="center_vertical"
  	    android:layout_alignParentRight="true"
  	    >
  	     <ImageView 
  	         android:id="@+id/iv_mchat_reply"
	         android:layout_width="15dp"
	         android:layout_height="15dp"
	         android:background="@drawable/em_86"
	         android:layout_marginRight="10dp"
	         />
  	</LinearLayout>
 </RelativeLayout>
 <TextView 
     android:layout_width="fill_parent"
     android:layout_height="5dp"
     android:layout_below="@id/rl_mchat_createtime"
     />
 </RelativeLayout>
</RelativeLayout>