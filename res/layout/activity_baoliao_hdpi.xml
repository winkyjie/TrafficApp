<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_bg" >
   
    <LinearLayout
      android:layout_marginTop="8dp"
      android:layout_marginLeft="15dp" 
      android:layout_marginRight="15dp" 
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:orientation="horizontal">
        <ImageView 
            android:id="@+id/btn_loc"
            android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:background="@drawable/btn_bl_loc"/>
        <EditText 
	      android:id="@+id/et_loc"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingLeft="3dp"
	      android:textColor="#727272"
	      android:singleLine="true"
	      android:hint="@string/roadname"
	      android:textSize="14sp"
	      android:background="@drawable/bl_edit_loc"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp" 
      	android:layout_marginRight="15dp"
        >
        <Button 
            android:id="@+id/btn_e2w"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/gray_overlay"
	        android:textSize="13sp"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
            android:text="东往西"
            />
        <Button 
            android:id="@+id/btn_w2e"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@color/gray_overlay"
	        android:textSize="13sp"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
            android:text="西往东"
            />
        <Button 
            android:id="@+id/btn_s2n"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@color/gray_overlay"
	        android:textSize="13sp"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
            android:text="南往北"
            />
        <Button 
            android:id="@+id/btn_n2s"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:background="@color/gray_overlay"
	        android:textSize="13sp"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
            android:text="北往南"
            />
    </LinearLayout>
    
    <LinearLayout 
      android:layout_marginLeft="15dp" 
      android:layout_marginRight="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:layout_marginTop="3dp"
      android:orientation="horizontal" >
    <EditText 
      android:id="@+id/et_baoliao"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:paddingLeft="3dp"
      android:paddingTop="3dp"
      android:gravity="top"
      android:textColor="#727272"
      android:singleLine="true"
      android:hint="@string/roadstatus"
      android:textSize="14sp"
      android:background="@drawable/bl_edit_loc"/>
    </LinearLayout>
    
  <!-- ////////////////////////////上传图片////////////////////////////////// -->
  <LinearLayout
    android:layout_marginLeft="15dp" 
    android:layout_marginRight="15dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="9dp"
    android:visibility="gone">
        <ImageView 
	    android:id="@+id/iv_baoliao1"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_marginRight="5dp"
	    android:clickable="true"
	    android:scaleType="fitXY"
	    android:background="@drawable/bl_zhaopian"/>
        <ImageView 
	    android:id="@+id/iv_baoliao2"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginLeft="5dp"
	    android:clickable="true"
	    android:scaleType="fitXY"
	    android:background="@drawable/bl_zhaopian"
	    android:visibility="gone"/>
        <ImageView 
	    android:id="@+id/iv_baoliao3"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginLeft="5dp"
	    android:clickable="true"
	    android:scaleType="fitXY"
	    android:background="@drawable/bl_zhaopian"
	    android:visibility="gone"/>
        <ImageView 
	    android:id="@+id/iv_baoliao4"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:layout_marginLeft="5dp"
	    android:clickable="true"
	    android:scaleType="fitXY"
	    android:background="@drawable/bl_zhaopian"
	    android:visibility="gone"/>
      
  </LinearLayout>

    <!-- ////////////////////////////////上传图片///////////////////////////////// -->
    
    <GridView
        android:id="@+id/bl_myGrid"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="8dp"    
        android:gravity="center_horizontal"    
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"/>

  <!-- 00000000000000000000000000000000000000000000000 -->
  <LinearLayout
      android:layout_marginLeft="60dp"
      android:layout_marginRight="60dp" 
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical">
      <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      
        <ImageView 
	    android:id="@+id/iv_bl_yongji"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_yongji"/>
        <ImageView 
	    android:id="@+id/iv_bl_huanman"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_huanman"/>
        <ImageView 
	    android:id="@+id/iv_bl_changtong"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_changtong"/>
      
  </LinearLayout>
  
      <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      
        <ImageView 
	    android:id="@+id/iv_bl_gaidao"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_gaidao"
	    android:visibility="gone"/>
        <ImageView 
	    android:id="@+id/iv_bl_shigong"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_shigong"/>
        <ImageView 
	    android:id="@+id/iv_bl_huaiche"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_huaiche"/>
        <ImageView 
	    android:id="@+id/iv_bl_zhuangche"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_zhuangche"/>
      
  </LinearLayout>
  
      <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
        <ImageView 
	    android:id="@+id/iv_bl_fenglu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_fenglu"/>
        <ImageView 
	    android:id="@+id/iv_bl_jishui"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_jishui"/>
        <ImageView 
	    android:id="@+id/iv_bl_guanzhi"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:layout_weight="1"
	    android:clickable="true"
	    android:background="@drawable/bl_guanzhi"/>
  </LinearLayout>
  </LinearLayout>
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="3dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
      >
   <Button
       android:id="@+id/btn_bl_playorstop" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/record_selectable_background"
       android:text="播放"
       android:textSize="13sp"
       android:gravity="center"
       android:textColor="#FFFFFF"
       android:layout_weight="1"
       />
   
   <cn.fszt.trafficapp.widget.RecordButton
      android:id="@+id/btn_luyin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/record_selectable_background"
      android:layout_weight="1"
      android:text="按住说话"
       android:textSize="13sp"
       android:gravity="center"
       android:textColor="#FFFFFF"
       android:enabled="false"
      />
   <Button
       android:id="@+id/btn_bl_submit" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/record_selectable_background"
       android:text="提交"
       android:textSize="13sp"
       android:gravity="center"
       android:textColor="#FFFFFF"
       android:layout_weight="1"
       android:visibility="gone"
       />
  </LinearLayout>
</LinearLayout>
