<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#ffffff" 
    >
 <LinearLayout 
     android:id="@+id/ll_mpl"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_alignParentRight="true"
     android:layout_marginLeft="6dp"
	 android:layout_marginRight="8dp"
     >
 <ImageView 
    android:id="@+id/iv_mpl"
    android:layout_width="45dp"
    android:layout_height="45dp"
	android:layout_marginTop="8dp"
	android:layout_marginBottom="1dp"
    android:scaleType="fitXY"
    />
 <TextView 
     android:id="@+id/tv_mpl_del"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="5dp"
     android:text="@string/delete"
     android:textSize="13sp"
     android:layout_gravity="center_horizontal"
     android:clickable="true"
     android:textColor="#a5a5a5"
     />
     
 </LinearLayout>
 
 <RelativeLayout 
     android:layout_toLeftOf="@id/ll_mpl"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
	 android:layout_marginLeft="4dp"
     android:background="@drawable/chatto_bg_normal"
     >
 <TextView 
    android:id="@+id/tv_mpl_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_marginBottom="3dp"
	android:layout_alignParentRight="true"
	android:layout_marginRight="4dp"
    android:textSize="15sp" 
    android:textColor="#e75735"/>

 <TextView 
    android:id="@+id/tv_mpl_createtime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#a5a5a5"
    />
 <TextView 
    android:id="@+id/tv_mpl_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_mpl_nickname"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="3dp"
    android:paddingTop="3dp"
    android:layout_alignParentRight="true"
    android:textSize="15sp"
    android:lineSpacingExtra="2dp"
    android:textColor="@color/name_text"
    android:typeface="serif"
    />
 <ImageView 
     android:id="@+id/iv_mpl_img1"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mpl_content"
	 android:scaleType="centerCrop"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mpl_img2"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mpl_content"
     android:layout_toRightOf="@id/iv_mpl_img1"
	 android:scaleType="centerCrop"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mpl_img3"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mpl_content"
     android:layout_toRightOf="@id/iv_mpl_img2"
	 android:scaleType="centerCrop"
	 android:visibility="gone"
     />
 <ImageView 
     android:id="@+id/iv_mpl_img4"
     android:layout_width="@dimen/listview_photo_size"
     android:layout_height="@dimen/listview_photo_size"
     android:clickable="true"
     android:layout_marginRight="5dp"
     android:layout_below="@id/tv_mpl_content"
     android:layout_toRightOf="@id/iv_mpl_img3"
	 android:scaleType="centerCrop"
	 android:visibility="gone"
     />
 </RelativeLayout>
</RelativeLayout>